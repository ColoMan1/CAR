<form bindsubmit="bindform">
  <view class="weui-cells weui-cells_after-title" style="margin-top:50rpx;">
      <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
              <input name="phone" type ="number" class="weui-input" placeholder="请输入手机号码"/>
          </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__bd">
              <input name="code" type ="number" class="weui-input" placeholder="请输入验证码" />
          </view>
          <view class="weui-cell__ft">
              <!-- <view class="weui-vcode-btn">获取验证码</view> -->
              <button form-type="submit" class="weui-btn mini-btn" type="primary" size="mini" style="color:black;background-color:{{second?'#FFC12C':'#ccc'}};margin:20rpx 10rpx 0 0;">获取验证码</button>
          </view>
      </view>
  </view>
  <button form-type="submit" class="weui-btn" type="primary" style="background-color:#FFCE39;color:black;margin:50rpx;">提交</button>
 </form>