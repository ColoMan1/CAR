<!-- 
        =======     班次查询 
-->
<block wx:if="{{topShow}}">
  <view class="weui-loadmore">
    <view class="weui-loading"></view>
    <view class="weui-loadmore__tips">正在加载</view>
  </view>
</block>
<block wx:else>


  <!--导航条-->
  <view class="navbar">
    <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" bindtap="navbarTap">{{item}}</text>
  </view>
  <!--全部班次-->
  <view hidden="{{currentTab!==0}}">
    tab_01
  </view>

  <!--已发车-->
  <view hidden="{{currentTab!==1}}">
    <scroll-view scroll-y="true" bindscrolltolower="scrolltolower" style="height:1026rpx;">
        <navigator  wx:for="{{classes}}" url="../inquire/bayCarDetails">
            <view class="weui-panel__ft" style="background-color:white;">
                <view class="weui-cell weui-cell_access weui-cell_link" style="">
                <view class="weui-cell__bd">
                    <view class="weui-cell__bd" style="display:flex;width:90%;">

                    <!-- <view class="weui-cell__bd" style="display:flex;justify-content:space-between;width:90%;">   车站箭头和时间平分布局-->

                    <view class="for_banci">{{item.CategoryName}}</view>
                    <image src="../../img/jt.png" style="height:60rpx;width:60rpx;"></image>
                    <view class="for_banci">{{item.Title}}</view>
                    <view class="for_banci">{{item.CreateTime}}</view>
                    </view>
                    <view wx:if="{{true}}" class="weui-cell__bd">
                      <view class="yfc">已发车</view>
                      <view class="yjd">已截单</view>
                    </view>
                    <view wx:else class="weui-cell__bd">
                      <view class="wjd">未截单</view>
                    </view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </view>
            </view>
        </navigator>
      <block wx:if="{{bottomShow}}">
       <view class="weui-loadmore">
        <view class="weui-loading"></view>
        <view class="weui-loadmore__tips">玩命加载中...</view>
      </view>
    </block> 
     <block wx:else>
      <view class="weui-loadmore weui-loadmore_line">
          <view class="weui-loadmore__tips weui-loadmore__tips_in-line">暂无数据</view>
      </view>
    </block> 
    </scroll-view>
     
  </view>

  <!--未发车-->
  <view hidden="{{currentTab!==2}}">
    tab_03
  </view>
</block>